<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_popupwindow" parent="android:Animation">
            <item name="android:windowEnterAnimation">@anim/anim_popupwindow_up</item>
            <item name="android:windowExitAnimation">@anim/anim_popupwindow_down</item>
    </style>


    <style name="loading" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:layout_width">55dip</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- listView 刷新 -->
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:layout_width">55dip</item>
        <item name="android:layout_height">21dip</item>
    </style>

    <!-- 分享对话框 -->
    <style name="dialog_share" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/animation_share_dialog</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="share_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/dialog_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/color_767676</item>
        <item name="android:background">@drawable/bg_share_translucent_white_click_reflection</item>
    </style>

    <!-- 标准对话框样式 -->
    <style name="dialog_standard" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
